<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">You are here: </div>
    {if $homepage}
        <li><a href="{plink $homepage->getPresenter().':'.$homepage->getAction()}">Home</a></li>
    {else}
        <li><a href="{plink :Admin:Homepage:Homepage:}">Home</a></li>
    {/if}

    <li n:foreach="$breadcrumbs AS $breadcrumb" {if $thisPage == $breadcrumb} class="active"{/if}>
        {if $thisPage == $breadcrumb}
            {$breadcrumb->getName()}
        {else}
            <a{if !$breadcrumb->getChildren()} href="{plink $breadcrumb->getPresenter().':'.$breadcrumb->getAction()}" {/if}>
                {$breadcrumb->getName()}
            </a>
        {/if}
    </li>

</ul>


